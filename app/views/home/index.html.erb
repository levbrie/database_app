
        <%= render 'royalslider' %>




<div id="showcase">
    <div class="container">
        <div class="section_header">
            <h3>Recent Artwork</h3>
        </div>            
        <div class="row feature_wrapper">
   
            <!-- Features Row -->
            <div class="features_op1_row">
                <!-- Feature -->
                <% Artwork.find(:all, :limit => 3).each do |a| %>
                <div class="span4 feature first">
                    <div class="img_box">
                        <a href=<%= artwork_path(a.art_id)%>>
                           <%= image_tag url_for(:controller => "artworks", :action => "show_image", :id => a.id) %>
                           <span class="circle"> 
                            <span class="plus">&#43;</span>
                        </span>
                    </a>
                </div>
                <div class="text">
                    <h6><%= a.title %></h6>
                    <p>
                        <%= a.creation_date.strftime("%Y") %>

                    </p>
                </div>
            </div>
            <% end %>

        </div>
    </div>
</div>
</div>




<div id="features">
    <div class="container">
        <div class="section_header">
            <h3>Features</h3>
        </div> 
        <div class="row feature">
            <div class="span6">
                <%= image_tag ("clean/showcase1.png") %>
            </div>
            <div class="span6 info">
                <h3>
                    <img src=url(images/clean/features-ico1.png) />
                    Beautiful on all devices
                </h3>
                <p>
                    The database and admin functionality have been optimized for mobile devices, so your users can view your galleries from anywhere, and you can perform data entry when you want, where you want, how you want. 
                </p>
            </div>
        </div>
        <div class="row feature ss">
            <div class="span6 info">
                <h3>
                   <%= image_tag ("clean/features-ico3.png") %>

                   Dynamic Galleries
               </h3>
               <p>
                Galleries are built to take individual data attributes into account, and the isotope.js library enables us to support dynamic gallery viewing by category.
            </p>
        </div>
        <div class="span6">
           <%= image_tag("clean/showcase2.png", :class => "pull-right") %>
       </div>
   </div>
</div>
</div>
