    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :org_type %><br />
    <%= f.text_field :org_type %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
