<h1>Listing artworks</h1>

<table>
  <tr>
    <th>Art</th>
    <th>Title</th>
    <th>Value</th>
    <th>Condition</th>
    <th>Collection</th>
    <th>Purchase date</th>
    <th>Creation date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @artworks.each do |artwork| %>
  <tr>
    <td><%= artwork.art_id %></td>
    <td><%= artwork.title %></td>
    <td><%= artwork.value %></td>
    <td><%= artwork.condition %></td>
    <td><%= artwork.collection_id %></td>
    <td><%= artwork.purchase_date.strftime("%Y") %></td>
    <td><%= artwork.creation_date.strftime("%Y") %></td>
    <td><%= link_to 'Show', artwork %></td>
    <td><%= link_to 'Edit', edit_artwork_path(artwork) %></td>
    <td><%= link_to 'Destroy', artwork, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<div id="portfolio">
    <div class="container">
        <div class="section_header">
            <h3>Artworks</h3>
        </div>
        <div class="row">
            <div class="span12">
                <div id="filters_container">
                    <ul id="filters">
                        <li><a href="#" data-filter="*" class="active">All</a></li>
                        <li class="separator">/</li>
                        <li><a href="#" data-filter=".art">Art</a></li>
                        <li class="separator">/</li>
                        <li><a href="#" data-filter=".ilustration">Illustration</a></li>
                        <li class="separator">/</li>
                        <li><a href="#" data-filter=".print">Print</a></li>
                        <li class="separator">/</li>
                        <li><a href="#" data-filter=".web">Web</a></li>
                    </ul>
                </div>
            </div>
        </div>            
        <div class="row">
            <div class="span12">
                <div id="gallery_container">
                    <% @artworks.each do |artwork| %>
                    <div class="photo print">
                        <%= image_tag url_for(:controller => "artworks", :action => "show_image", :id => artwork.id) %>
                        <a href="<%= artwork_path(artwork) %>" class="mask">
                            <h3><%= artwork.title %></h3>
                            <small>
                                Purchased on <%= artwork.purchase_date.strftime("%Y") %><br>
                                Condition: <%= artwork.condition %><br>
                                Id: <%= artwork.collection_id %><br>
                                Value: <%= artwork.value %><br>
                            </small>
                            <div class="more">+</div>
                        </a>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>            
             


