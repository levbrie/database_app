

    <div id="portfolio_tem">
        <div class="container">
            <div class="section_header">
                <h3><%= @artist.first_name %> <%= @artist.last_name %></h3>
            </div>

            <div class="span7 left_box">
                <div class="big">
                    <% @artist.artworksIn.each do |a| %>

                      <% if a != nil %>
                        <%= image_tag(url_for(:controller => "artworks", :action => "show_image", :id => a.id), :class => "heighted") %>
                      <% end %>
                    <% end %>

                </div>
                <div class="thumbs">
                    <% @artist.artworksIn.each do |a| %>
                    <div class="thumb">
                      <%= image_tag(url_for(:controller => "artworks", :action => "show_image", :id => a.id)) %>
                        <a href="#" class="mask">
                            <div class="more">+</div>
                        </a>
                    </div>
                    <% end %>
                </div>
            </div>

            <div class="span5 right_box">
                <h2><%= @artist.first_name %> <%= @artist.last_name %></h2>
                  <p id="notice"><%= notice %></p>

                  <p>
                    <b>Artist:</b>
                    <%= @artist.artist_id %>
                  </p>

                  <p>
                    <b>First name:</b>
                    <%= @artist.first_name %>
                  </p>

                  <p>
                    <b>Last name:</b>
                    <%= @artist.last_name %>
                  </p>

                  <p>
                    <b>Pseudonym:</b>
                    <%= @artist.pseudonym %>
                  </p>

                  <p>
                    <b>Nationality:</b>
                    <%= @artist.nationality %>
                  </p>

                  <p>
                    <b>Birth:</b>
                    <%= @artist.birth.strftime("%Y") %>
                  </p>

                  <p>
                    <b>Death:</b>
                    <%= @artist.death.strftime("%Y") %>
                  </p>

                  <p>
                    <b>Url:</b>
                    <%= @artist.url %>
                  </p>


                  <p>
                    <b>Reference Material(s):</b><br>
                      <% @artist.referencedBy.each do |r| %>
                        <%=link_to("Title: "+ r.title, reference_material_path(r.ref_id), :class=>"") %><br>
                      <% end %>
                  </p>

                  <%= link_to 'Edit', edit_artist_path(@artist) %> |
                  <%= link_to 'Back', artists_path %>
                  <div class="paddedDiv"></div>
            </div>
        </div>
    </div>
