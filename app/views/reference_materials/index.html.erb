<% @reference_materials.each do |reference_material| %>
  <tr>
    <td><%= reference_material.ref_id %></td>
    <td><%= reference_material.title %></td>
    <td><%= reference_material.abstract %></td>
    <td><%= reference_material.content %></td>
    <td><%= reference_material.url %></td>
    <td><%= link_to 'Show', reference_material %></td>
    <td><%= link_to 'Edit', edit_reference_material_path(reference_material) %></td>
    <td><%= link_to 'Destroy', reference_material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

